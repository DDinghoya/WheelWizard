<!-- ModIndependentPopup.xaml -->
<popups:PopupContent x:Class="WheelWizard.WPFViews.Popups.ModManagment.ModIndependentWindow"
                     xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                     xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                     xmlns:popups="clr-namespace:WheelWizard.WPFViews.Popups"
                     xmlns:modManagment="clr-namespace:WheelWizard.WPFViews.Popups.ModManagment"
                     mc:Ignorable="d"
                     d:DesignHeight="600" d:DesignWidth="400">
    <Grid>
        <!-- Use the ModDetailViewer component to display mod details -->
        <modManagment:ModDetailViewer x:Name="ModDetailViewer" />
    </Grid>
</popups:PopupContent>