<Styles xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:components="clr-namespace:WheelWizard.Views.Components">

    <Design.PreviewWith>
        <Border Padding="20" Background="{StaticResource Neutral950}">
            <StackPanel Spacing="5">
                <components:Button Width="150" Text="Default" Classes="default"/>
                <components:Button Width="150" Text="Primary" Classes="primary"/>
                <components:Button Width="150" Text="Secondary" Classes="secondary"/>
                <components:Button Width="150" Text="Danger" Classes="danger"/>
            </StackPanel>
        </Border>
    </Design.PreviewWith>

    <Style Selector="components|Button">
        <!-- Set Defaults -->
        <Setter Property="Background" Value="{DynamicResource Neutral700}" />
        <Setter Property="BorderBrush" Value="Transparent" />
        <Setter Property="BorderThickness" Value="0"/>
        <Setter Property="CornerRadius" Value="{DynamicResource GlobalCornerRadius}" />
        <Setter Property="Padding" Value="16,10" />
        <Setter Property="Foreground" Value="{StaticResource Neutral300}" />
        <Setter Property="Template">
            <ControlTemplate>
                <Border Background="{TemplateBinding Background}"
                        BorderBrush="{TemplateBinding BorderBrush}"
                        BorderThickness="{TemplateBinding BorderThickness}"
                        CornerRadius="{TemplateBinding CornerRadius}">
                    <StackPanel Orientation="Horizontal" Spacing="5" 
                                HorizontalAlignment="Center" VerticalAlignment="Center">
                        <components:IconLabel
                            IsVisible="{TemplateBinding Text, Converter={x:Static ObjectConverters.IsNotNull}}"
                            IconData="{TemplateBinding IconData}"
                            IconSize="{TemplateBinding IconSize}"
                            Text="{TemplateBinding Text}"
                            VerticalAlignment="Center"
                            Foreground="{TemplateBinding Foreground}"
                            />
                    </StackPanel>
                </Border>
            </ControlTemplate>
        </Setter>
    </Style>
</Styles>