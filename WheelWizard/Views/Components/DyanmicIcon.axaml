<UserControl x:Class="WheelWizard.Views.Components.DynamicIcon"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             d:DesignHeight="100" d:DesignWidth="100"
             x:Name="Root"
             Background="Transparent">
    
    <Path Data="{Binding #Root.IconData, Mode=OneWay}" 
          Fill="{Binding #Root.ForegroundColor, Mode=OneWay}"
          Stretch="Uniform"
          HorizontalAlignment="Center"
          VerticalAlignment="Center"
          Width="{Binding #Root.IconSize, Mode=OneWay}"
          Height="{Binding #Root.IconSize, Mode=OneWay}"/>
</UserControl>