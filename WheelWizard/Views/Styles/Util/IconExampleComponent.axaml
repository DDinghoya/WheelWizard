<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    
             xmlns:util="clr-namespace:WheelWizard.Styles.Util"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="WheelWizard.Styles.Util.IconExampleComponent"
             x:DataType="util:IconExampleComponent">

    <StackPanel Spacing="5" Margin="5">
        <Border Width="150" Height="150" BorderThickness="1" BorderBrush="#EDEDF1">
            <Path Data="{Binding IconData}"
                  Fill="#3E424E" 
                  Stretch="Uniform" 
                  HorizontalAlignment="Center" 
                  VerticalAlignment="Center"/>
        </Border>
        <TextBlock Text="{Binding IconName}" 
                   HorizontalAlignment="Center" 
                   Foreground="#EDEDF1"/>
    </StackPanel>
</UserControl>
