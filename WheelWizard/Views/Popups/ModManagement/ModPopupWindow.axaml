<popups:PopupContent x:Class="WheelWizard.Views.Popups.ModManagement.ModPopupWindow"
             xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:popups="clr-namespace:WheelWizard.Views.Popups"
             xmlns:components="clr-namespace:WheelWizard.Views.Components"
             xmlns:pages="clr-namespace:WheelWizard.Views.Pages"
             xmlns:lang="clr-namespace:WheelWizard.Resources.Languages"
             ClipToBounds="False"
             xmlns:modManagement="clr-namespace:WheelWizard.Views.Popups.ModManagment"
             xmlns:modManagement1="clr-namespace:WheelWizard.Views.Popups.ModManagement"
             mc:Ignorable="d" d:DesignHeight="600" d:DesignWidth="800">
    <Grid ColumnDefinitions="2*,3*">
        <!-- Mod List -->
        <Grid Grid.Column="0" Margin="10" RowDefinitions="Auto,Auto,*">
            <TextBlock Classes="TinyText" Text="Powered By Gamebanana" 
                       HorizontalAlignment="Left" Grid.Row="0"/>

            <!-- Search Bar -->
            <Grid Grid.Row="1" Margin="0,10,0,10" HorizontalAlignment="Stretch">
                <components:FormFieldLabel Text="Search:" Margin="0,6,0,0"/>
                <TextBox Name="SearchTextBox"
                         Watermark="Search for mods..."
                         Classes="dark" Grid.Row="1" Grid.Column="0" Height="40"
                         HorizontalAlignment="Stretch"
                         Margin="0,0,0,5"
                         />

                <components:Button Text="" FontSize="16" Height="40" IconData="{StaticResource Search}"
                                   HorizontalAlignment="Right" VerticalAlignment="Center"
                                   Click="Search_Click" Margin="10,0,0,5" />
            </Grid>

            <!-- Mod List -->
            <ListBox Grid.Row="2" Name="ModListView" 
                     SelectionMode="Single"
                     SelectionChanged="ModListView_SelectionChanged" 
                     Margin="0,0,10,0"
                     Background="Transparent"
                     BorderThickness="0"
                     ScrollViewer.HorizontalScrollBarVisibility="Disabled"
                     ScrollViewer.VerticalScrollBarVisibility="Auto">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border BorderThickness="0"  Padding="5" 
                                Background="{StaticResource Neutral900}">
                            <Grid ColumnDefinitions="100,*">
                                <Image Grid.Column="0" Width="90" Height="90" 
                                       Source="{Binding FirstImageUrl}" 
                                       Stretch="UniformToFill" 
                                       Margin="0,0,10,0"/>

                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <components:FormFieldLabel Text="{Binding _sName}" />
                                    <TextBlock Classes="TinyText" Text="{Binding _aSubmitter._sName}" />

                                    <StackPanel Orientation="Horizontal" Margin="0,5,0,0">
                                        <components:StateBox Text="{Binding _nLikeCount}" TipText="Likes" 
                                                             IconData="{StaticResource Heart}"
                                                             Margin="3"/>
                                        <components:StateBox Text="{Binding _nViewCount}" TipText="Views" 
                                                             IconData="{StaticResource Eye}"
                                                             Margin="3"/>
                                    </StackPanel>
                                </StackPanel>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Grid>

        <!-- Mod Details -->
        <Grid Grid.Column="1" Margin="10,0,0,0">
            <modManagement1:ModDetailViewer x:Name="ModDetailViewer"
                                            IsVisible="False"/>
      
            <components:EmptyPageInfo Title="No mod selected" BodyText="Select a mod to view its details" 
                                      IconData="{StaticResource Banana}" x:Name="EmptyDetailsView"/>
        </Grid>

        <Border Grid.Column="1" Background="{StaticResource BackgroundLineColor}" Width="1" 
                Margin="0,-10" HorizontalAlignment="Left" VerticalAlignment="Stretch" />
    </Grid>
</popups:PopupContent>