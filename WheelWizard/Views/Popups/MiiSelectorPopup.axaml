<popups:PopupContent xmlns="https://github.com/avaloniaui"
                     xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                     xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                     xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                     xmlns:popups="clr-namespace:WheelWizard.Views.Popups"
                     xmlns:components="clr-namespace:WheelWizard.Views.Components"
                     xmlns:lang="clr-namespace:WheelWizard.Resources.Languages"
                     xmlns:behaviorComponent="clr-namespace:WheelWizard.Views.BehaviorComponent"
                     mc:Ignorable="d" d:DesignWidth="500" d:DesignHeight="450"
                     x:Class="WheelWizard.Views.Popups.MiiSelectorPopup"
                     x:DataType="popups:MiiSelectorPopup">
    <Grid RowDefinitions="*, Auto, Auto" Width="450" MinHeight="300" MaxHeight="600">
        <!-- Mii Selection Grid -->
        <behaviorComponent:MiiSelectorGrid Grid.Row="0" x:Name="MiiGrid"
                                      Margin="0,10,0,10"
                                      ItemsSource="{Binding AvailableMiis}"
                                      SelectedItem="{Binding SelectedMii, Mode=TwoWay}" />


        <!-- Separator -->
        <Border Grid.Row="1" Background="{StaticResource BackgroundLineColor}" Height="1"
                HorizontalAlignment="Stretch" VerticalAlignment="Bottom" Margin="0,5" />

        <!-- Action Buttons -->
        <UniformGrid Grid.Row="2" Columns="2" Margin="0,10,0,0" HorizontalAlignment="Right">
            <components:Button x:Name="EditButton"
                               Variant="Default"
                               Text="{x:Static lang:Common.Action_Edit}"
                               IconData="{StaticResource Pen}"
                               IsEnabled="False"
                               Click="EditButton_Click"
                               Margin="0,0,5,0" />
            <components:Button x:Name="SelectButton"
                               Variant="Primary"
                               Text="Select"
                               IconData="{StaticResource CheckMark}"
                               IsEnabled="False"
                               Click="SelectButton_Click"
                               Margin="5,0,0,0" />
        </UniformGrid>

    </Grid>
</popups:PopupContent>