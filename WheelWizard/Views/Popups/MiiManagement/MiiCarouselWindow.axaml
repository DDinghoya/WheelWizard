<base:PopupContent xmlns="https://github.com/avaloniaui"
                   xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                   xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
                   xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                   xmlns:behavior="clr-namespace:WheelWizard.Views.BehaviorComponent"
                   xmlns:components="clr-namespace:WheelWizard.Views.Components"
                   xmlns:miiVars="using:WheelWizard.MiiImages.Domain"
                   xmlns:base="clr-namespace:WheelWizard.Views.Popups.Base"
                   mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450" ClipToBounds="False"
                   x:Class="WheelWizard.Views.Popups.MiiManagement.MiiCarouselWindow">
    <Grid Width="440" Height="300">
        <components:LoadingIcon HorizontalAlignment="Center" VerticalAlignment="Center" Width="180" Height="180"
                                x:Name="MiiLoadingIcon" Foreground="{StaticResource Neutral800}" />
        <behavior:MiiCarousel x:Name="Carousel" VerticalAlignment="Center" HorizontalAlignment="Stretch" Height="280" 
                              ImageVariant="{x:Static miiVars:MiiImageVariants.FullBodyCarousel}"/>
    </Grid>
</base:PopupContent>