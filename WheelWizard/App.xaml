<Application x:Class="CT_MKWII_WPF.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:converters="clr-namespace:CT_MKWII_WPF.Views.Converters"
             StartupUri="Views/Layout.xaml">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Views/Styles/Constants.xaml" />
                <ResourceDictionary Source="Views/Styles/ButtonStyles.xaml" />
                <ResourceDictionary Source="Views/Styles/TextStyles.xaml" />
                <ResourceDictionary Source="Views/Styles/CheckboxStyles.xaml" />
                <ResourceDictionary Source="Views/Styles/Converters.xaml" />
                <ResourceDictionary Source="Views/Styles/ContextMenuStyles.xaml" />
                <ResourceDictionary Source="Views/Styles/ScrollBarStyle.xaml" />
                <ResourceDictionary Source="Views/Styles/InputFieldStyles.xaml" />
                <ResourceDictionary Source="Views/Styles/SettingsBlockStyle.xaml" />
                <ResourceDictionary Source="Views/Styles/Dropdown.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
            <converters:MultiplierValueConverter x:Key="MultiplierValueConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>
